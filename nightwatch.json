{
	"src_folders" : ["test"],
	"output_folder" : "reports",
	"custom_commands_path" : "",
	"custom_assertions_path" : "test/bin/custom/assertion",
	"page_objects_path" : "",
	"globals_path" : "",

	"selenium" : {
		"start_process" : true,
		"server_path" : "test/bin/selenium-server-standalone-2.46.0.jar",
		"log_path" : false,
		"host" : "127.0.0.1",
		"port" : 4444,
		"cli_args" : {
			"webdriver.chrome.driver" : "",
			"webdriver.ie.driver" : ""
		}
	},

	"test_settings" : {
		"default" : {
			"launch_url" : "http://fandora.github.io/mdl-react",
			"selenium_port"  : 4444,
			"selenium_host"  : "localhost",
			"silent" : true,
			"output" : true,
			"disable_colors" : false,
			"screenshots" : {
				"enabled" : false
			},
			"desiredCapabilities": {
				"browserName": "chrome",
				"javascriptEnabled": true,
				"acceptSslCerts": true
			},
			"filter": "test/*.js",
			"log_screenshot_data" : false,
			"end_session_on_fail" : true,
			"skip_testcases_on_fail": false
		},

		"firefox" : {
			"desiredCapabilities": {
				"browserName": "firefox",
				"javascriptEnabled": true,
				"acceptSslCerts": true
			}
		},

		"screenshot" : {
			"screenshots" : {
				"enabled" : true,
				"on_failure" : true,
				"on_error" : false,
				"path" : "test/screenshots"
			}
		}
	},

	"live_output" : true,

	"disable_colors" : false,

	"parallel_process_delay" : 500,

	"test_workds" : true
}
